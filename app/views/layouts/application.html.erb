<!DOCTYPE html>
<html>
<head>
  <title>TweetyAuth</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= flash_messages %>

  <nav class="navbar-custom navbar-transparent">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header page-scroll">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"><p style="font-size: 25px;" class="glyphicon glyphicon-sunglasses"></p></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse">
        <%= link_to 'Home', root_path, class: 'navbar-brand' %>
        <ul class="nav navbar-nav navbar-right">
            <% if !current_user %>
              <li><%= link_to "Sign in with Twitter", "/users/auth/twitter?include_email=email", class: 'btn btn-primary' %></li>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
            <% if current_user %>
              <li><%= link_to "Signout", destroy_user_session_path, method: :delete %></li>
              <li><%= link_to "Edit Acct", edit_user_registration_path %></li>
            <% end %>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </nav>



<%= yield %>

</body>
<footer class="footer navbar-fixed-bottom">
  <div class="container footer">
    <ul class="list-inline text-center text-muted footer">
      <li>
        <a href="http://www.github.com/lowellmower/tweety_auth" target="_blank">GitHub</a>
      </li>
      <li>
        <a href="http://www.linkedin.com/in/lowellmower" target="_blank">LinkedIn</a>
      </li>
      <li>
        <a href="http://www.twitter.com/lowellmower" target="_blank">@lowellmower</a>
      </li>
      <li>
        <a href="/privacy">Privacy</a>
      </li>
      <li>
        <a href="/terms">Terms & Conditions</a>
      </li>
    </ul>
  </div>
</footer>
</html>
